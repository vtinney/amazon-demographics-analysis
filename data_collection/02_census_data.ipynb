def create_directories():
    """Create necessary directory structure"""
    directories = [
        'data',
        'data/raw',
        'data/raw/census',
        'data/processed'
    ]
    
    for directory in directories:
        os.makedirs(directory, exist_ok=True)
    
    print("üìÅ Directory structure created")

def standardize_muni_code(code):
    """Standardize municipality codes to 7 digits"""
    if pd.isna(code):
        return None
    return f"{int(code):07d}"

def save_data_with_metadata(df, filename, description=""):
    """Save data with accompanying metadata file"""
    # Save the data
    df.to_csv(filename, index=False)
    
    # Create metadata
    metadata = {
        "filename": os.path.basename(filename),
        "created": datetime.now().isoformat(),
        "rows": len(df),
        "columns": len(df.columns),
        "description": description,
        "column_names": list(df.columns)
    }
    
    # Save metadata
    metadata_file = filename.replace('.csv', '_metadata.json')
    with open(metadata_file, 'w', encoding='utf-8') as f:
        json.dump(metadata, f, indent=2, ensure_ascii=False)
    
    print(f"üíæ Saved: {filename} ({len(df)} rows)")

# Setup directories
create_directories()

