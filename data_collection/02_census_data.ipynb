print(f"   Average sewage access: {infra_summary['sewage_access_pct']:.1f}%")
print(f"   Average electricity access: {infra_summary['electricity_access_pct']:.1f}%")
print(f"   Municipalities analyzed: {int(infra_summary['code_muni'])}")

# Save household data
